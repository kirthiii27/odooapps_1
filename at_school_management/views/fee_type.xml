<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View (List instead of Tree in Odoo 18) -->
    <record id="view_school_fee_type_list" model="ir.ui.view">
        <field name="name">school.fee.type.list</field>
        <field name="model">school.fee.type</field>
        <field name="arch" type="xml">
            <list string="Fee Types">
                <field name="name"/>
                <field name="amount"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_school_fee_type_form" model="ir.ui.view">
        <field name="name">school.fee.type.form</field>
        <field name="model">school.fee.type</field>
        <field name="arch" type="xml">
            <form string="Fee Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="amount"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_school_fee_type" model="ir.actions.act_window">
        <field name="name">Fee Types</field>
        <field name="res_model">school.fee.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define your fee categories here.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_school_fee_type" name="Fee Types" parent="menu_school_fee_payment_root"
              action="action_school_fee_type" sequence="20"/>
</odoo>
