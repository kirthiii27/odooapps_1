<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_school_class_tree" model="ir.ui.view">
        <field name="name">school.class.tree</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <list string="Classes">
                <field name="name"/>
                <field name="section"/>
                <field name="grade"/>
                <field name="academic_year"/>
            </list>
        </field>
    </record>

    <record id="view_school_class_form" model="ir.ui.view">
        <field name="name">school.class.form</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form string="Class">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="section"/>
                        <field name="grade"/>
                        <field name="academic_year"/>
                        <field name="students"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    

    <record id="action_school_class" model="ir.actions.act_window">
        <field name="name">Classes</field>
        <field name="res_model">school.class</field>
        <field name="view_mode">list,form</field>
         <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Register a class!
              </p>
            </field>
    </record>

    <menuitem id="menu_school_classes" name="Classes" parent="menu_school_root" action="action_school_class"/>
</odoo>
