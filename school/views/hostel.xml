<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- Hostel Form View -->
    <record id="view_hostel_form" model="ir.ui.view">
        <field name="name">hostel.form</field>
        <field name="model">hostel</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="manager_id"/>
                            <field name="total_rooms"/>
                        </group>
                        <group>
                            <field name="contact_phone"/>
                            <field name="active"/>
                            <field name="address"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Rooms">
                            <field name="student_ids">
                                <list>
                                    <field name="student_id"/>
                                    <field name="room_id"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="status"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Hostel Tree View -->
    <record id="view_hostel_tree" model="ir.ui.view">
        <field name="name">hostel.tree</field>
        <field name="model">hostel</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="manager_id"/>
                <field name="total_rooms"/>
            </list>
        </field>
    </record>

    <!-- Room Form View -->
    <record id="view_hostel_room_form" model="ir.ui.view">
        <field name="name">hostel.room.form</field>
        <field name="model">hostel.room</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                        <h2><field name="hostel_id"/></h2>
                    </div>
                    <group>
                        <group>
                            <field name="capacity"/>
                            <field name="current_occupancy"/>
                            <field name="available_beds"/>
                        </group>
                    </group>
                    <field name="student_ids">
                        <list>
                            <field name="student_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="status"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_hostel" model="ir.actions.act_window">
        <field name="name">Hostels</field>
        <field name="res_model">hostel</field>
        <field name="view_mode">list,form</field>
           <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No records yet!
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_hostel_root" name="Hostel Management" parent="menu_school_root"/>
    <menuitem id="menu_hostel" name="Hostels" parent="menu_hostel_root" action="action_hostel"/>
</odoo>