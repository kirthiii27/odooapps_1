<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Search View -->
    <record id="view_school_student_search" model="ir.ui.view">
        <field name="name">school.student.search</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="admission_no"/>
                <filter name="gender_filter" string="Gender" domain="[('gender', '!=', False)]"/>
                <filter name="class_filter" string="Class" domain="[('class_id', '!=', False)]"/>
                <filter name="medical_history_filter" string="Has Medical History" domain="[('medical_history', '!=', False)]"/>
                <group string="Group By">
                    <filter name="group_by_gender" string="Gender" context="{'group_by':'gender'}"/>
                    <filter name="group_by_class" string="Class" context="{'group_by':'class_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Tree View (List View) -->
    <record id="view_school_student_tree" model="ir.ui.view">
        <field name="name">school.student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="admission_no"/>
                <field name="dob"/>
                <field name="gender"/>
                <field name="class_id"/>
                <field name="image_1920" widget="image"
                       options="{'preview_image': 'image_1920', 'size': [124, 159]}"/>
            </list>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_school_student_kanban" model="ir.ui.view">
        <field name="name">school.student.kanban</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="admission_no"/>
                <field name="class_id"/>
                <field name="gender"/>
                <field name="image_1920"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card" style="display: flex; flex-direction: row; align-items: center; gap: 16px;">
                            <!-- Image on the left -->
                            <div class="oe_kanban_image" style="width: 35mm; height: 45mm; overflow: hidden; flex-shrink: 0;">
                                <field name="image_1920" widget="image"
                                       options="{'preview_image': 'image_1920'}"
                                       style="width: 100%; height: 100%; object-fit: cover;"/>
                            </div>

                            <!-- Student info on the right -->
                            <div class="oe_kanban_details" style="flex-grow: 1;">
                                <div style="margin-bottom: 8px;">
                                    <strong>Name:</strong> <field name="name"/>
                                </div>
                                <div style="margin-bottom: 8px;">
                                    <strong>Admission No:</strong> <field name="admission_no"/>
                                </div>
                                <div style="margin-bottom: 8px;">
                                    <strong>Class:</strong> <field name="class_id"/>
                                </div>
                                <div style="margin-bottom: 8px;">
                                    <strong>Gender:</strong> <field name="gender"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_school_student_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title" style="margin-bottom: 20px;">
                        <label for="name" string="Full Name" style="display: block; font-weight: bold; margin-bottom: 5px;"/>
                        <h1>
                            <field name="name" class="student_full_name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="admission_no"/>
                            <field name="dob"/>
                            <field name="gender"/>
                            <field name="medical_history"/>
                            <field name="blood_group"/>
                            <field name="roll_no"/>
                            <field name="house_address"/>
                            <field name="doj"/>
                        </group>
                        <group>
                            <field name="class_id"/>
                            <field name="parent_id"/>
                            <div style="width: 35mm; height: 45mm; border: 1px solid #dee2e6; display: flex; justify-content: center; align-items: center; overflow: hidden;">
                                <field name="image_1920" widget="image"
                                       options="{'preview_image': 'image_1920'}"
                                       style="max-width: 100%; max-height: 100%; object-fit: contain;"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Documents">
                            <field name="document_ids">
                                <list>
                                    <field name="document_type"/>
                                    <field name="file_path"/>
                                </list>
                            </field>
                        </page>
                        <page string="Track Skills">
                            <field name="trackskill"/>
                        </page>
                    </notebook>
                </sheet>
                <style>
                    .student_full_name input {
                        font-size: 24px !important;
                        font-weight: bold !important;
                        height: 40px !important;
                        padding: 8px !important;
                        width: 100% !important;
                    }
                    .oe_title label {
                        font-size: 16px !important;
                        color: #666 !important;
                    }
                </style>
            </form>
        </field>
    </record>

    <!-- Action: Open Student Form, List, and Kanban -->
    <record id="action_school_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="view_school_student_search"/>
          <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Register a Student!
              </p>
            </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_school_root"
              name="School"
              web_icon="school,static/src/img/icon.png"/>
    <menuitem id="menu_school_students"
              name="Students"
              parent="menu_school_root"
              action="action_school_student"
              sequence="1"/>
</odoo>