<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree/List View -->
    <record id="view_school_library_book_tree" model="ir.ui.view">
        <field name="name">school.library.book.tree</field>
        <field name="model">school.library.book</field>
        <field name="arch" type="xml">
            <list string="Library Books">
                <field name="title"/>
                <field name="author"/>
                <field name="ISBN"/>
                <field name="total_copies"/>
                <field name="available_copies"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_school_library_book_form" model="ir.ui.view">
        <field name="name">school.library.book.form</field>
        <field name="model">school.library.book</field>
        <field name="arch" type="xml">
            <form string="Library Book">
                <sheet>
                    <group>
                        <field name="title"/>
                        <field name="author"/>
                        <field name="ISBN"/>
                        <field name="total_copies"/>
                        <field name="available_copies"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_school_library_book" model="ir.actions.act_window">
        <field name="name">Library Books</field>
        <field name="res_model">school.library.book</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first library book.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_school_library_root" name="Library" parent="menu_school_root"/>
    <menuitem id="menu_school_library_books" name="Books" parent="menu_school_library_root"
              action="action_school_library_book"/>
</odoo>
