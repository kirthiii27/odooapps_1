<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_school_subject_tree" model="ir.ui.view">
        <field name="name">school.subject.tree</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <list string="Subjects">
                <field name="name"/>
                <field name="subject_code"/>
            </list>
        </field>
    </record>

    <record id="view_school_subject_form" model="ir.ui.view">
        <field name="name">school.subject.form</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <form string="Subject">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="subject_code"/>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Assigned Teachers">
                            <field name="teacher_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_subject" model="ir.actions.act_window">
        <field name="name">Subjects</field>
        <field name="res_model">school.subject</field>
        <field name="view_mode">list,form</field>
          <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Register a Subject!
              </p>
            </field>
    </record>

    <menuitem id="menu_school_subjects" name="Subjects" parent="menu_school_root" action="action_school_subject"/>
</odoo>
