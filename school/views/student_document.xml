<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_school_student_document_tree" model="ir.ui.view">
        <field name="name">school.student.document.tree</field>
        <field name="model">school.student.document</field>
        <field name="arch" type="xml">
            <list string="Student Documents">
                <field name="student_id"/>
                <field name="document_type"/>
            </list>
        </field>
    </record>

    <record id="view_school_student_document_form" model="ir.ui.view">
        <field name="name">school.student.document.form</field>
        <field name="model">school.student.document</field>
        <field name="arch" type="xml">
            <form string="Student Document">
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="document_type"/>
                        <field name="file_path" filename="document_type"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_school_student_document" model="ir.actions.act_window">
        <field name="name">Student Documents</field>
        <field name="res_model">school.student.document</field>
        <field name="view_mode">list,form</field>
          <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Register a Student Document!
              </p>
            </field>
    </record>

    <menuitem id="menu_school_documents" name="Documents" parent="menu_school_root" action="action_school_student_document"/>
</odoo>
